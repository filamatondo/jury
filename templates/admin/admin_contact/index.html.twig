{% extends 'base_admin_contact.html.twig' %}

{% block title %}Hello ContactController!
{% endblock %}

{% block body %}

	<div class="contacter-nous">
		{% for contact in app.flashes('contact') %}

			<div class="col">
				<div class="p-3 my2 rounded-2 success">
					{{contact}}
				</div>
			</div>
		{% endfor %}

		<div class="container">
			<div class="card">
				<div class="card-header">
					{{ form_start(form) }}

					{{ form_widget(form) }}
					<button class="btn btn-primary" type="submit">Envoyer</button>
					{{ form_end(form) }}
				</div>
			</div>
		</div>
	</div>
{% endblock %}
