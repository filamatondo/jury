{% extends 'base_admin_contact.html.twig' %}

{% block title %}Article index
{% endblock %}

{% block body %}

	<section class="container py-4" style="margin-top:-10%;">


		<div class="row">

			{% for article in articles | reverse %}
				<div class="col-1 col-md-7 " style="margin-left:20%;">


					<a href="{{ path('admin_article_show', {'id': article.id}) }}" style="text-decoration : none !important;  "></a>
					<div class="card">


						<div class="card-header">
							<h1>{{ article.titre | upper}}</h1>
							<p>Contenu</p>
							{{ article.contenu }}
						</div>


						<div class="card-body">

							<img class="w-100" src="{{ asset(article.image) }}" style="height: 620px;  object-fit:contain !important; "/>


							<div class="card-footer">
								<p>Auteur :{{ article.auteur}}
								</p>


								<p>
									{{ article.date ? article.date|date('d/m/Y  Ã   H:i:s') : '' }}</p>
								<a href="{{ path('admin_article_show', {'id' :article.id}) }}" class="btn btn-primary" style="margin-left:60%; font-size:14px; font-size:14px; ">Commenter</a>

								<a href="{{ path('admin_article_show', {'id' :article.id}) }}" class="btn btn-success" style="margin-left:20%; margin-top:-8% ; font-size:14px; ">voir l'article</a>


								{% if app.user is same as article.auteur %}

									<a href="{{ path('admin_article_edit', {'id' :article.id}) }}" class="btn btn-info" style=" margin-left:-40%; margin-top:-8% ; font-size:14px; ">Modifier</a>


								{% endif %}

							</div>


						</div>
					</div>
				</div>
			{% endfor %}
		</div>
	</section>
{% endblock %}
