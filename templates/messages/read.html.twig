{% extends 'base_messagerie.html.twig' %}

{% block title %}Messagerie
{% endblock %}

{% block body %}

	<section class="container">
		<div class="row">
			<div class="col-12">
				<h1 class="reception">Vous avez Reçu</h1>


				<div class="card">
					<div class="card-body">
						<div class="card-heard">
							<div class="card-title">
								<p class="email">Message de</p>

								<p class="email">
									{{ message.sender.email }}
								</p>
								<p class="email">
									{{ message.createdAt|date }}</p>
							</div>
						</div>
					</div>

					<div class="card-footer">
						<div>{{ message.message | raw}}</div>

					</div>
				</div>
			</div>
		</div>
	</section>
	<a href="{{ path ("send", {'id': message.sender.id })}} " class="btn btn-info mt-5;">Répondre</a>

	<a href="{{ path("received") }}" class="btn btn-link mt-5;">Retour à la boite de réception</a>

{% endblock %}
