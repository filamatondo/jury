{% extends 'base_messagerie.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
	<div class="register-form" style="margin-left:20%; width:70%; height:48px; margin-top:10%">

		<section>

			<div class="contenaire">
			    <div class=alert" style="margin-top:"3%">
			    	{% for message in app.flashes('message') %}

				<div class="col">
					<div class="p-3 my2 rounded-2 success">
						{{message}}
					</div>
				</div>
			     {% endfor %}
			     </div>

				<div class="row">
					<div class="col">
						<h1 class="reception" style="margin-top:7%; font-size:25px; color:blue ">Envoyer un message</h1>
                        
                        <div class="span12" style="width:100%; height:20px;">
						{{ form(form) }}
                        </div>
						</div>
					</div>
				</div>
			</div>
		</section>
	</div>
{% endblock %}
