{% extends 'base_messagerie.html.twig' %}

{% block title %}{% endblock %}

{% block body %}


	<section>
		<div class="row">
			<div class="col">

				<h1 class="reception" style="margin-top:7%; ">Message envoyé</h1>
				{#  Mon titre H1 de ma messagerie #}

				

				{# app.user.sent : c'est l'utilisateur qui envoye le message #}
				<p>Vous avez envoyé :{{ app.user.sent|length }}</p>


				{#les titre de ma messagerie, pour mieux expliquer au utilisateur  #}
		</div>
		</div>
	</div>
	<div class="card">
		<div class="row">
			<div class="col-4">De</div>
			<div class="col-4">Sujet</div>
			<div class="col-2">Date</div>
			<div class="col">Supprimer</div>
		</div>
	</div>


		<div class="row">
			<div class="table-primary">
				<div class="col-2">

					{% for message in app.user.sent %}

						{% if message.isRead == 0 %}
							{% set bold = "fw-bold" %}
						{% else %}
							{% set bold = "" %}

						{% endif %}

					</div>
				</div>
			</div>
			  {# <div class="container">
			  <div class="card"> #}
				<table class="table table-striped table-light position-fixe">
					<thead>
						<tr>
							<th scope="col">
								<div class="row">
									<div class="col-4 {{bold}}">
										{{ message.sender.email }}
									</div>


									<div class="col-4 {{bold}}">

										<a href="{{ path("read" , {id: message.id}) }}">
											{{ message.message}}
										</a>
									</div>


									<div class="col-4 {{bold}}">{{ message.createdAt|date }}


										{# la lien qui me permet de pouvoir supprimer un message #}

										<a href="{{ path("dellet" , {id: message.id} ) }}">
											<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-archive-fill col-4 text-danger" viewBox="0 0 16 16"> <path d="M12.643 15C13.979 15 15 13.845 15 12.5V5H1v7.5C1 13.845 2.021 15 3.357 15h9.286zM5.5 7h5a.5.5 0 0 1 0 1h-5a.5.5 0 0 1 0-1zM.8 1a.8.8 0 0 0-.8.8V3a.8.8 0 0 0 .8.8h14.4A.8.8 0 0 0 16 3V1.8a.8.8 0 0 0-.8-.8H.8z"/> 
							                 </svg> 
											</a>
										</div>
									</div>
								</div>
							</th>
						</tr>
					</thead>
				
				</table>
			</div>
		{% endfor %}
	</div>
</section>
{% endblock %}
