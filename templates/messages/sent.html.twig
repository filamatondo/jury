{% extends 'base_messagerie.html.twig' %}

{% block title %}{% endblock %}

{% block body %}


	<section>
		<div class="row">
			<div class="col">

				<h1 class="reception" style="margin-top:20%; color:blue; margin-left:2%">Message envoyé</h1>
				{#  Mon titre H1 de ma messagerie #}


				{# app.user.sent : c'est l'utilisateur qui envoye le message #}
				<p class="envoye" style="margin-left:2%; color:#32cd32; font-size:15px;">Vous avez envoyé :{{ app.user.sent|length }}</p>


				{#les titre de ma messagerie, pour mieux expliquer au utilisateur  #}
			</div>
		</div>

		<div class="card" style"font-size:18px">
			<div class="row">
				<div class="col-4" style="margin-left:1%; color:#00FF00 ">De</div>
				<div class="col-4" style="color:blue">Sujet</div>
				<div class="col-2" style="color:#008080">Date</div>
				<div class="col" style="color:#F81010">Supprimer</div>
			</div>
		</div>


		<div class="row">
			<div class="table-primary">
				<div class="col-12" style="font-size:20px">

					{% for message in app.user.sent | reverse  %}

						{% if message.isRead == 0 %}
							{% set bold = "#00808; btn-info " %}
							{# fw-bold pour mettre le texte en gras. #}
						{% else %}
							{% set bold = "btn-success" %}

						{% endif %}


						<table class="table table-striped table-light position-fixe">


							<div class="row">
								<div class="col-4 {{bold}}">
									{{ message.sender.email  }}
								</div>


								<div class="col-4 {{bold}}">

									<a href="{{ path("read" , {id: message.id}) }}">
										{{ message.message}}
									</a>
								</div>


								<div class="col-4 {{bold}}">{{ message.createdAt|date }}


									{# la lien qui me permet de pouvoir supprimer un message #}

									<a href="{{ path("dellet" , {id: message.id} ) }}">
										<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-archive-fill col-4 text-danger" viewbox="0 0 16 16" style="margin-left:8%">
											<path d="M12.643 15C13.979 15 15 13.845 15 12.5V5H1v7.5C1 13.845 2.021 15 3.357 15h9.286zM5.5 7h5a.5.5 0 0 1 0 1h-5a.5.5 0 0 1 0-1zM.8 1a.8.8 0 0 0-.8.8V3a.8.8 0 0 0 .8.8h14.4A.8.8 0 0 0 16 3V1.8a.8.8 0 0 0-.8-.8H.8z"/>
										</svg>
									</a>
								</div>
							</div>
						</table>
					{% endfor %}
				</div>
			</div>
		</div>
	</section>
{% endblock %}
