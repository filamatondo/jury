{% extends 'base_home.html.twig' %}

{% block title %}{% endblock %}

{% block body %}


	<div class="sidenav-header">
		<div class="spinner-grow text-primary" role="status">
			<span class="visually-hidden">Loading...</span>
		</div>
		{{ users|length }}
		Abonn√©s...
	</div>
	<div class="col-1 col-md-3 position-fixed fixed-top">

		<div class="form-inline my-2 my-lg-0">
			{{ form_start(form) }}

			<div class="container">

				{{ form_widget(form, {'attr': {'class': 'foo'}})  }}

				<button class="btn btn-outline-success " type="submit">Search</button>


				{{ form_end(form) }}

			</div>
		</div>
	</div>
	<div class="allo">

		<div class="row">

			{% for user in users %}

				<div class="card">

					<div class="card-body">
						<div class="card-heard">
							<div class="card-title">
								{{ user.prenom }}
								{{ user.nom }}
							</div>
						</div>

						<div
							class="card-footer">
							{# {% for app in user %} #}

							{%  if app.user %}
								{# <img class="w-100" src="{{ asset(user.photoProfil) }}" style="height:330px; margin-top:-1%; "/> #}

								{% if user.photoProfil is not null %}

									<img class="card-img-top" src="{{ asset(user.photoProfil) }}"/>

								{% else %}
									<img src="https://img.icons8.com/ios/50/000000/name--v2.png " class="card-img-top"/>
								{% endif %}
							{% endif %}

						</div>


						<div class="card-body">
							<a href="{{ path ("send", {'id': user.id})}} " class="btn btn-primary">
								Envoyer un message
							</a>
						</div>
						{%  if app.user %}
							<a href="{{ path ("home_profil", {'id': user.id})}} " class="btn btn-info">
								Profil
							</a>
						{% endif %}


					</div>
				</div>

			{% endfor %}

		</div>
	{% endblock %}
